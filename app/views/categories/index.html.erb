<div class="container my-3">
  <h2>カテゴリー一覧</h2>
</div>

<div class="container">
  <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => " / " %>
  </ol>
</div>

<div class="container my-5">
  <hr>
</div>

<div class="row justify-content-around">
  <% @categories.each do |category| %>
  <h3 class="container">
    <span>
      <%= link_to category.name, category_path(id: category.id), class: "badge badge-pill badge-secondary badge-lg" %>
    </span>
  </h3>
  <% end %>
  <div class="container mt-4">
    <%= link_to '新規カテゴリー作成', new_category_path, class: "btn btn-info btn-lg" %>
  </div>
</div>

<div class="container my-5">
  <hr>
</div>

<div class="container my-5">
  <%= link_to '新規質問作成', new_question_path, class: "btn btn-success btn-lg" %>
</div>
