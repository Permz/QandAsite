<h2>カテゴリー一覧</h2>

<div class="container my-5">
  <hr>
</div>

<div class="row justify-content-around">
  <% @categories.each do |category| %>
  <h3 class="container">
    <span>
      <%= link_to category.name, category_path(id: category.id), class: "badge badge-pill badge-secondary badge-lg" %>
    </span>
  </h3>
  <% end %>
</div>

<div class="container my-5">
  <hr>
</div>

<div class="container my-5">
  <%= link_to '新規質問作成', new_question_path, class: "btn btn-success btn-lg" %>
</div>
