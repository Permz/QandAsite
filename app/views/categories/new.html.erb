<div class="container my-3">
  <h2>カテゴリー作成</h2>
</div>

<div class="container">
  <ol class="breadcrumb">
    <%= render_breadcrumbs :tag => :li, :separator => " / " %>
  </ol>
</div>

<%= form_with(model: @category, local: true) do |form| %>
  <div class="my-4">
    <div class="row justify-content-around">
      <div class="card text-center shadow-lg my-3 h-75" style="height: 500px; width: 800px;">
        <h5 class="card-header">カテゴリー作成</h5>
        <h5 class="card-body">カテゴリー名: <%= form.text_field :name %></h5>
          <div class="actions">
            <%= form.submit "カテゴリー作成", class: "btn btn-success btn-lg my-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
