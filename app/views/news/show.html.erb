<h1 class="mb-5">質問内容</h1>

<div class="row justify-content-around">
  <div class="card text-center col-8 shadow-lg my-3">
    <h5 class="card-header">タイトル：<%= @news.title %></h5>
    <div class="card-body">
      <h5 class="card-title"><%= @news.content %></h5>
      <p class="card-text text-right text-muted">投稿者：<%= @news.user_id %></p>
      <% if current_user.id == @news.user_id %>
        <%= link_to '編集', edit_news_path(@news), class: "btn btn-success mx-2" %>
        <%= link_to '削除', @news, method: :delete, class: "btn btn-danger mx-2", data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
</div>

<h2 class="my-5">ニュースへのコメント</h2>

<div class="container my-5">
  <hr>
</div>

<%= link_to 'Back', news_index_path, class: "btn btn-secondary btn-lg my-5" %>
