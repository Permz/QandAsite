<!-- スライドショー -->
<div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="http://via.placeholder.com/728x200" class="d-block w-100" alt="スライド1">
    </div>
    <div class="carousel-item">
      <img src="http://via.placeholder.com/728x200" class="d-block w-100" alt="スライド2">
    </div>
    <div class="carousel-item">
      <img src="http://via.placeholder.com/728x200" class="d-block w-100" alt="スライド3">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- 最新Newsへのリンク -->
<div class="container mt-3">
  <%= link_to "#{@latest_news.title}", news_path(id: @latest_news.id), class: "font-italic" %>
</div>

<!-- ジャンボトロン -->
<div class="container mt-5">
  <div class="jumbotron">
    <h2 class="display-4">CareYou</h2>
    <p class="lead">あなたと介護を考える</p>
    <hr class="my-3">
    <p>CareYouは、介護を行うあなたのための情報共有サイトです。</p>
    <div class="container mt-4">
      <%= link_to '新規会員登録', new_user_session_path, class: "btn btn-primary btn-lg shadow-sm" %>
    </div>
  </div>
</div>

<!-- 相談コーナーへの導線 -->
<div class="container mt-3">
  <div class="card">
    <div class="container mt-5">
      <h2>相談してみましょう</h2>
      <p>相談コーナーでは、介護の悩みを気軽に相談できます。</p>
    </div>
    <div class="container mb-5">
      <%= link_to "相談一覧", questions_path, class: "btn btn-info btn-lg mx-1" %>
      <%= link_to "相談してみる", new_question_path, class: "btn btn-success btn-lg mx-1" %>
    </div>
  </div>
</div>

<!-- ニュースコーナーへの導線 -->
<div class="container mt-3">
  <div class="container mt-5">
    <h2>ニュース</h2>
  </div>
  <div class="container mb-5">
    <%= link_to "ニュース一覧", news_index_path, class: "btn btn-warning btn-lg mx-1" %>
  </div>
</div>