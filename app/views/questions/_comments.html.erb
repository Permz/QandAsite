<div class="container justify-content-around">
  <% if user_signed_in? %>
    <%= form_with(model: [@question, @comment], local: true) do |form| %>
      <div class="row text-center">
        <div class="card shadow-lg mt-3 h-75" style="height: 900px; width: 1600px;">
          <div class="card-body my-3">
            <h5 class="card-title">コメント内容: <%= form.text_area :content %></h5>
            <%= form.hidden_field :question_id, value: @question.id %>
            <div class="actions">
              <%= form.submit "コメントする", class: "btn btn-success btn-lg my-3" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <h5 class="font-italic">ログインするとコメントできます</h5>
  <% end %>
</div>