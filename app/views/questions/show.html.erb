<h1 class="mb-5">質問内容</h1>

<div class="container justify-content-around">
  <div class="row">
    <div class="card text-center shadow-lg my-3 h-75" style="height: 900px; width: 1600px;">
      <h5 class="card-header">タイトル：<%= @question.title %></h5>
      <div class="card-body">
        <h5 class="card-title"><%= @question.content %></h5>
        <% if @user.image? %>
          <%= image_tag @user.image.thumb.url %>
        <% else %>
          <!--
            = image_tag "noimage.gif" 
          -->
        <% end %>
        <p class="card-text text-right text-muted">投稿者：<%= @question.user.name %></p>
        <div class="container my-3">
          <h5>タグ: 
          <% @question.categories.each do |category| %>
            <%= link_to category.name, category_path(id: category.id), class: "badge badge-pill badge-secondary" %>
          <% end %>
          </h5>
        </div>
        <% if current_user.id == @question.user_id %>
          <%= link_to '編集', edit_question_path(@question), class: "btn btn-success mx-2" %>
          <%= link_to '削除', @question, method: :delete, class: "btn btn-danger mx-2", data: { confirm: '削除しますか?' } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render 'posted', question: @question %>

<h2 class="my-5">コメントする</h2>

<%= render 'comments', question: @question %>

<div class="container my-5">
  <hr>
</div>

<div class="container my-4">
  <%= link_to '相談一覧', questions_path, class: "btn btn-secondary mx-2 btn-lg" %>
</div>
