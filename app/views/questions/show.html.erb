<h1 class="mb-5">質問内容</h1>

<div class="row justify-content-around">
  <div class="card text-center col-8 shadow-lg my-3">
    <h5 class="card-header">タイトル：<%= @question.title %></h5>
    <div class="card-body">
      <h5 class="card-title"><%= @question.content %></h5>
      <p class="card-text text-right text-muted">投稿者：<%= @question.user_id %></p>
      <div class="container my-3">
        <% @question.categories.each do |category| %>
          <small>タグ: </small><%= link_to category.name, category_path(id: category.id), class: "badge badge-pill badge-secondary" %>
        <% end %>
      </div>
      <% if current_user.id == @question.user_id %>
        <%= link_to '編集', edit_question_path(@question), class: "btn btn-success mx-2" %>
        <%= link_to '削除', @question, method: :delete, class: "btn btn-danger mx-2", data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
</div>

<h2 class="my-5">相談へのコメント</h2>

<div class="container my-5">
  <hr>
</div>

<div class="container my-4">
  <%= link_to '相談一覧', questions_path, class: "btn btn-secondary mx-2 btn-lg" %>
</div>
