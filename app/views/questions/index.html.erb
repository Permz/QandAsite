<h1>相談一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>相談内容</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.content %></td>
        <td><%= question.user_id %></td>
        <td><%= link_to '詳細', question, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規質問作成', new_question_path, class: "btn btn-success" %>
