<h1 class="mb-5">相談一覧</h1>

<div class="container justify-content-center">
  <div class="row row-cols-1 row-cols-md-2">
    <% @questions.each do |question| %>
      <div class="col mb-3">
        <div class="card text-center shadow-lg my-5 h-75", style="height: 300px;">
          <h5 class="card-header">タイトル：<%= question.title %></h5>
          <div class="card-body">
            <h5 class="card-title"><%= question.content %></h5>
            <% question.categories.each do |category| %>
              <h5>タグ: 
                <span>
                  <%= link_to category.name, category_path(id: category.id), class: "badge badge-secondary" %>
                </span>
              </h5>
            <% end %>
            <p class="card-text text-right text-muted">投稿者：<%= question.user.name %></p>
            <%= link_to '詳細', question, class: "btn btn-info btn-lg" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<div class="container my-5">
  <hr>
</div>

<%= link_to 'カテゴリー一覧', categories_path, class: "btn btn-lg btn-warning" %>

<div class="container my-5">
  <%= link_to '新規質問作成', new_question_path, class: "btn btn-success btn-lg" %>
</div>
